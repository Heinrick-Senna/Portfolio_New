<section id="EmailSec" class="Block" style="display: none;">
    <div class="Tittle"><h1>Me Envie Uma Mensagem</h1></div>
	
	<div id="FormContainer">
		<form method="POST" action="marceloheinrick.com.br">
			<input type="text" name="name" autocomplete="off" placeholder="Nome" required>
			
			<input type="text" name="email" autocomplete="off" placeholder="Celular ou Email" required>

			<textarea name="text" rows="3" placeholder="Sua Mensagem" required></textarea>

			<button type="send">Enviar</button>
		</form>
	</div>

</section>